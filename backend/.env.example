# Umami Recipe App Backend - Environment Variables Template
# Copy this file to .env and fill in your actual API keys and credentials

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
CHATGPT_API_KEY=your_openai_api_key_here

# Unsplash API Configuration  
# Get your access key from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Daily.co Video API Configuration
# Get your API key from: https://dashboard.daily.co/developers
DAILY_CO_KEY=your_daily_co_api_key_here

# Firebase Admin SDK Configuration (Optional)
# If using service account key file, provide the path to the JSON file
# Alternative: Use default Google Cloud credentials or environment variables
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/your/firebase-service-account-key.json

# Google Cloud Vision API Configuration
# Set this to the path of your Google Cloud service account key file
# Alternative: Use default Google Cloud credentials via gcloud CLI
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-cloud-service-account-key.json

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True